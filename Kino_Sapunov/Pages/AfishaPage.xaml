<Page x:Class="Kino_Sapunov.Pages.AfishaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kino_Sapunov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AfishaPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="txtName" Width="150" Margin="5" Text="Фильм"/>
            <ComboBox x:Name="cbKino" Width="150" Margin="5" DisplayMemberPath="name" SelectedValuePath="id"/>
            <DatePicker x:Name="dpTime" Width="150" Margin="5"/>
            <TextBox x:Name="txtPrice" Width="100" Margin="5" Text="Цена"/>
            <Button Content="Добавить" Click="Add_Click" Margin="5"/>
            <Button Content="Редактировать" Click="Edit_Click" Margin="5"/>
            <Button Content="Удалить" Click="Delete_Click" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="dgAfisha" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="Кинотеатр" Binding="{Binding id_kinoteatr}"/>
                <DataGridTextColumn Header="Фильм" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Время" Binding="{Binding time}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding price}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
