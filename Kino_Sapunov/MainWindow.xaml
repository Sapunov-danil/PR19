<Window x:Class="Kino_Sapunov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kino_Sapunov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Height="40">
                <Button Content="Кинотеатры" Margin="5" Background="DarkCyan" Width="120" Foreground="White" Click="Kinoteatr_Click"/>
                <Button Content="Афиша" Margin="5" Background="DarkCyan" Width="120" Foreground="White" Click="Afisha_Click"/>
            </StackPanel>
            <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
